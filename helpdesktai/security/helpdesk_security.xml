<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record model="ir.module.category" id="module_category_helpdesk">
        <field name="name">Helpdesk</field>
        <field name="sequence">10</field>
    </record>

    <record id="group_helpdesk_user" model="res.groups">
        <field name="name">Helpdesk User</field>
        <field name="category_id" ref="module_category_helpdesk"/>
    </record>

    <record id="group_helpdesk_manager" model="res.groups">
        <field name="name">Helpdesk Manager</field>
        <field name="users" eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"/>
        <field name="implied_ids"
               eval="[(4, ref('group_certification_user'))]"/>
        <field name="category_id" ref="module_category_helpdesk"/>
    </record>

</odoo>