<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="ticket_tree" model="ir.ui.view">
        <field name="name">Ticket</field>
        <field name="model">ticket</field>
        <field name="arch" type="xml">
            <tree string="Ticket">
                <field name="ticket_no"/>
                <field name="subject"/>
                <field name="incident_id"/>
                <field name="priority"/>
            </tree>
        </field>
    </record>

    <record id="ticket_form" model="ir.ui.view">
        <field name="name">Ticket</field>
        <field name="model">ticket</field>
        <field name="arch" type="xml">
            <form string="Ticket">
                <sheet>
                    <group>
                        <field name="ticket_no"/>
                        <field name="subject"/>
                        <field name="incident_id"/>
                        <field name="priority"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="ticket_action" model="ir.actions.act_window">
        <field name="name">Ticket</field>
        <field name="res_model">ticket</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem
            name="Help Desk"
            id="help_desk_menu"
            sequence="15"
            action="ticket_action"/>


</odoo>
