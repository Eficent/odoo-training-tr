<odoo>

<record id="partner_status_certification_view_list" model="ir.ui.view">
        <field name="name">Status Certification</field>
        <field name="model">partner.status.certification</field>
        <field name="arch" type="xml">
            <tree string="Status Certification">
                <field name="name"/>
                <field name="description"/>
            </tree>
        </field>
    </record>

    <record id="partner_status_certification_form" model="ir.ui.view">
        <field name="name">Status Certification</field>
        <field name="model">partner.status.certification</field>
        <field name="arch" type="xml">
            <form string="Status Certification">
                <sheet>
                    <div class="oe_title">
                        <label for="name" class="oe_edit_only" string="Name" />
                        <h1><field name="name" /></h1>
                    </div>
                    <group>
                        <field name="description"/>
                    </group>
                    <group>
                        <field name="organisation_ids"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

      <record id="partner_status_certification" model="ir.actions.act_window">
        <field name="name">Status Certification</field>
        <field name="res_model">partner.status.certification</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem
        name="Status Certification"
        id="res_partner_status_certification_menu"
        parent="contacts.res_partner_menu_config"
        sequence="5"
        action="partner_status_certification"/>
</odoo>
