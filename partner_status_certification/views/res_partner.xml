<odoo>
    <record id="view_partner_form" model="ir.ui.view">
        <field name="name">partner.status.certification.form</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <field name="category_id" position="after">
                <field name="status_certification_id"
                       options="{'no_create': True, 'no_open': True}"/>
                 <field name="is_organisation"/>
            </field>
        </field>
    </record>

    <record id="view_res_partner_filter" model="ir.ui.view">
        <field name="name">partner.status.certification.filter</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_res_partner_filter"/>
        <field name="arch" type="xml">
            <filter name="group_country" position="after">
              <filter name="group_status_certification"
                      string="Status Certification"
                      context="{'group_by': 'status_certification_id'}"/>
            </filter>
        </field>
    </record>
</odoo>
