<odoo>
    <record id="view_partner_list" model="ir.ui.view">
        <field name="name">product.required.certificate.list</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
             <xpath expr="//page[@name='purchase']" position="insied">
                     <page name ="required_certification" string="Required Certifications">
                         <field name="certification_ids"/>
                     </page>
            </xpath>
        </field>
    </record>
</odoo>
