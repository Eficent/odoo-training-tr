<odoo>
    <record id="view_partner_form" model="ir.ui.view">
        <field name="name">partner.certification.status.form</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <field name="category_id" position="after">
                <field name="certification_status_id"
                       options="{'no_create': True, 'no_open': True}"/>
                 <field name="is_organisation"/>
            </field>
        </field>
    </record>

    <record id="view_res_partner_filter" model="ir.ui.view">
        <field name="name">partner.certification.status.filter</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_res_partner_filter"/>
        <field name="arch" type="xml">
            <filter name="group_priority" position="after"><!--sempre que heredem algo hem de referenciarho-->
              <filter name="group_certification_status"
                      string="Certification Status"
                      context="{'group_by': 'certification_status_id'}"/>
            </filter>
        </field>
    </record>
</odoo>
